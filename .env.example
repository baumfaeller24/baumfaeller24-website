# Weather API Configuration
# Get your free API key from: https://openweathermap.org/api

# OpenWeatherMap API Key (Free tier: 1000 calls/day)
REACT_APP_OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Optional: German Weather Service (DWD) API
REACT_APP_DWD_API_KEY=your_dwd_api_key_here

# Development settings
REACT_APP_WEATHER_UPDATE_INTERVAL=900000
REACT_APP_WEATHER_CACHE_DURATION=600000
